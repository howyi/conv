{
    "name": "howyi/conv",
    "description": "Generate MySQL migration queries from actual DB and DDL",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":  "Hayashi Takuya",
            "email": "qrbys@outlook.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse -l 7 src",
        "cs": "phpcs --standard=PSR12 src tests",
        "cbf": "phpcbf --standard=PSR12 src tests",
        "check-fix": [
            "composer stan",
            "composer test",
            "composer cbf"
        ],
        "check": [
            "composer stan",
            "composer test",
            "composer cs"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/laminaria/conv-test-suite.git",
            "no-api": true
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php":             ">=7.1",
        "symfony/console": ">=2.0"
    },
    "autoload": {
        "psr-4": {
            "Laminaria\\Conv\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit":             "^6.2",
        "symfony/var-dumper":          "^3.3",
        "php-coveralls/php-coveralls": "^2.1",
        "phpspec/prophecy":            "^1.7",
        "phpstan/phpstan":             "^0.8.0",
        "squizlabs/php_codesniffer":   "^3.0",
        "laminaria/conv-test-suite":   "dev-master"
    },
    "bin": ["bin/conv"]
}
